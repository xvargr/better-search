{
  "name": "Better Search",
  "author": "contact@xvargr.dev",
  "description": "Make use of google's search refinement",
  "homepage_url": "https://xvargr.dev",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["activeTab", "tabs", "search"],
  "host_permissions": ["https://www.google.com/*"],
  "content_scripts": [
    {
      "js": ["src/content.jsx"],
      "matches": ["https://www.google.com/*"]
    }
  ],
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "192": "android-chrome-192x192.png",
    "512": "android-chrome-512x512.png"
  }
}
